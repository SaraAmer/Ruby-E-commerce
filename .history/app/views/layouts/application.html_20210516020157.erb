<!DOCTYPE html>
<html>
  <head>
    <title>ECommerce</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- CSS only -->
    <!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  </head>

  <body>
      <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

<h1 class="logo">E-commerce Store</h1>
    <ul class="list">
        <li class="list-item active">
           <a style="text-decoration:none"  href="<%= root_path %>">Home </a>
        </li>
        <li class="list-item">
        
          <a style="text-decoration:none"  href="<%= products_path %>">Shop</a>

        </li>
        <li class="list-item">
            Features
        </li>
     
                 <li class="list-item search">
               <i class="fas fa-search"></i>

        </li>
             <li class="list-item login">
              
             <a href="<%= new_user_session_path %>"> <i class="fas fa-sign-in-alt"></i></a>

              

        </li>
    </ul>



    <%= yield %>

        <script src="https://kit.fontawesome.com/35722683df.js" crossorigin="anonymous"></script>
  </body>
</html>
