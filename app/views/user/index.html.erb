<h1>User profile</h1>


<% if user_signed_in? %>
    <%=  current_user.name %> <br>
    <%=  current_user.email %>
    

<%if current_user.avatar.attached? %>
    <%= image_tag current_user.avatar , class: 'avatar' %>

    <%else%>
    <%=image_tag gravatar_image_url(current_user.email,size: 100),height: 100,  class: 'rounded-circle' %>

    <%end%>


<% end %>    
