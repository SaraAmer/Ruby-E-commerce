 <table id="cart" class="products">
        <tr class="header">
             <th> </th>
            <th>Product </th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Action</th>
        </tr>
 <% @products.each do |product| %>
        <tr>
            <td>
                <%= image_tag url_for(product.images[0]) %>
            </td>
            <td><h4><%= product.name%></h4></td>
            <td><%= product.price%></td>
            <td><%= product.carts_products[0].quantity %>
                <div class="qty">
                 <a style="color: white" href ="<%= update_cart_quantity_store_product_path(product.store , product , type: 'plus')%>">   <i class="fas fa-plus"></i> </a> <a style="color: white" href="<%= update_cart_quantity_store_product_path(product.store , product , type: 'minus')%>"> <i class="fas fa-minus"></i></a>
                </div>
            </td>
            <td><%= product.price%>$</td>
            <td class="actions">
                 <%= link_to  delete_from_cart_store_product_path(product.store , product) , method: :delete  ,data: { confirm: 'Are you sure?' } do %>
                            <i class="fa fa-trash"></i>
                            <% end %>
                

            </td>
        </tr>
       <%end%>
    </table>
   <div class="cart-action">
        <div class="content">
            <div class="total">
                <h4>Total : </h4> <span>$1000</span>

            </div>
            <button>Complete Purchase > </button>
        </div>

    </div>

    <script src="https://kit.fontawesome.com/35722683df.js" crossorigin="anonymous"></script>
