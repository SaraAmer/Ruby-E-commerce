<!DOCTYPE html>
<html>
  <head>
    <title>ECommerce</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

<h1 class="logo">E-commerce Store</h1>
    <ul class="list">
        <li class="list-item active">
           <a style="text-decoration:none"  href="<%= root_path %>">Home </a>
        </li>
        <li class="list-item">
        
          <a style="text-decoration:none"  href="<%= products_path %>">Shop</a>

        </li>
        <li class="list-item">
            Features
        </li>
     
                 <li class="list-item search">
               <i class="fas fa-search"></i>

        </li>
             <li class="list-item login">
              
             <a href="<%= new_user_session_path %>">
              <%# <i class="fas fa-sign-in-alt">
              </i>
              </a> %>

               <%= link_to "Logout ", destroy_user_session_path, method: :delete%> 
 

        </li>
    </ul>



    <%= yield %>

        <script src="https://kit.fontawesome.com/35722683df.js" crossorigin="anonymous"></script>
  </body>
</html>
